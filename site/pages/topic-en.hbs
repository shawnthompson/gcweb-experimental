---
{
	"title": "[Topic name]",
	"language": "en",
	"altLangPrefix": "topic",
	"pageclass": "secondary",
	"breadcrumb": [
		{ "title": "Home", "link": "http://www.canada.ca/en/index.html" },
		{ "title": "[Theme Name]", "link": "theme-en.html" }
	],
	"dateModified": "2015-12-29",
	"share": "true",
	"deptfeature": true,
	"pagetag": "1-2 sentences that describe the topics and top tasks that can be accessed on this page."
}
---
<div class="row profile">
	<div class="col-md-6">
		<h1 property="name" id="wb-cont">{{{title}}}</h1>
		<p class="pagetag">{{pagetag}}</p>
		{{>follow}}
	</div>
	<div class="col-md-6 margin-top-small hidden-sm hidden-xs">
		<img src="{{assets}}/img/520x200.png" alt="" class="pull-right img-responsive thumbnail"/>
	</div>
</div>
<div class="row">
	<div class="col-md-4 mrgn-tp-lg pull-right">
		{{>most-requested}}
	</div>
	<section class="col-md-8 pull-left mrgn-bttm-lg">
		<h2>Services and information</h2>
		<div class="row">
			{{>topic-subtopic}}
			{{>topic-subtopic}}
			<div class="clearfix"></div>
			{{>topic-subtopic}}
			{{>topic-subtopic}}
			<div class="clearfix"></div>
			{{>topic-subtopic}}
			{{>topic-subtopic}}
			<div class="clearfix"></div>
			{{>topic-subtopic}}
			{{>topic-subtopic}}
			<div class="clearfix"></div>
			{{>topic-subtopic}}
			{{>topic-subtopic}}
			<div class="clearfix"></div>
			<details class="mrgn-tp-md brdr-0">
				<summary class="btn btn-default text-center">Show more services and information</summary>
				<div class="row">
					{{>topic-subtopic}}
					{{>topic-subtopic}}
					<div class="clearfix"></div>
					{{>topic-subtopic}}
					{{>topic-subtopic}}
					<div class="clearfix"></div>
					{{>topic-subtopic}}
					{{>topic-subtopic}}
					<div class="clearfix"></div>
				</div>
			</details>
		</div>
	</section>
	<div class="clr-rght-md clr-rght-lg"></div>
	<div class="pull-right col-md-4">
		{{>supported-by}}
		{{>more-info}}
	</div>
</div>
<section class="whtwedo">
	<h2>What we are doing</h2>
	<div class="row wb-eqht">
		<section class="col-lg-4 col-md-6">
			{{>law-regulations}}
		</section>
		<section class="col-lg-4 col-md-6">
			{{>publications}}
		</section>
		<section class="col-lg-4 col-md-6">
			{{>consultations}}
		</section>
		<section class="col-lg-4 col-md-6">
			{{>open-data}}
		</section>
		<section class="col-lg-4 col-md-6">
			{{>statistics}}
		</section>
	</div>
</section>
